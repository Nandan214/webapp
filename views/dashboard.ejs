<!DOCTYPE html>
<html>
<head>
  <title>HistoCAL</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
  <style>
body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      background-color: #111;
      color: #fff;
    }
    
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #242323;
      padding: 10px;
      margin-bottom: 20px;
    }
    .welcome-text {
      color:#0cf03a;
      margin: 0;
      font-size: 24px;
    }
    .logout-button {
      color: #fff;
      text-decoration: none;
      background-color: #551a8b;
      padding: 10px 20px;
      border-radius: 4px;
    }
    .logout-button:hover {
      background-color: #773dbb;
    }
    .logout-button:active {
      background-color: #440b5f;
    }
    .result-container {
      background-color: #222;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
      margin-top: 20px; 
    }
    .result-container h2 {
      font-size: 24px;
    }
    .conversion-result {
      color: #fff;
      font-size: 16px;
      margin-bottom: 10px; 
    }
    .form-container {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      margin-bottom: 20px;
      background-color: #222;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }
    .form-container label {
      margin-right: 10px;
      font-weight: bold;
    }
    .form-container select {
      width: 120px;
      margin-right: 10px;
      padding: 6px;
      border-radius: 4px;
      border: 1px solid #555;
      background-color: #444;
      color: #fff;
    }
    .form-container input {
      margin-right: 10px;
      padding: 6px;
      border-radius: 4px;
      border: 1px solid #555;
      background-color: #444;
      color: #fff;
    }
    .form-container button {
      padding: 8px 16px;
      border-radius: 4px;
      background-color: #551a8b;
      color: white;
      border: none;
      cursor: pointer;
    }
    .form-container button:hover {
      background-color: #773dbb;
    }
    .form-container button:active {
      background-color: #440b5f;
    }
    .result-message {
      font-size: 18px;
      margin-top: 20px;
    }
    .currency-info {
      background-color: #222;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }
    .currency-info ul {
      list-style-type: none;
      padding: 0;
    }
    .currency-info li {
      margin-bottom: 5px;
    }
    footer {
      background-color: #111;
      color: white;
      padding: 10px;
      text-align: center;
    }
    footer div {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
      margin-top: 10px;
    }
    footer a {
      color: white;
      text-decoration: none;
    }
    footer a:hover {
      text-decoration: underline;
    }
    footer i {
      margin-right: 5px;
    }
    h2{
      color:#0cf03a;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1 class="welcome-text">Welcome, <span style="color: red;"> <%= username %> </span> </h1>
    <a class="logout-button" href="/logout">Logout</a>
  </div>
  <h2>Search Currency:</h2>
  <form action="/searchCurrency" method="post">
    <div class="form-container">
      <div>
        <label for="multiplier">Multiplier:</label>
        <input type="number" id="multiplier" name="multiplier" min="0" step="any" required>
      </div>
      <div>
        <label for="baseCurrency">Base Currency:</label>
        <select id="baseCurrency" name="baseCurrency" required>
          <option value="USD">USD</option>
          <option value="EUR">EUR</option>
          <option value="JPY">JPY</option>
          <option value="BGN">BGN</option>
          <option value="CZK">CZK</option>
          <option value="DKK">DKK</option>
          <option value="GBP">GBP</option>
          <option value="HUF">HUF</option>
          <option value="PLN">PLN</option>
          <option value="RON">RON</option>
          <option value="SEK">SEK</option>
          <option value="CHF">CHF</option>
          <option value="ISK">ISK</option>
          <option value="NOK">NOK</option>
          <option value="HRK">HRK</option>
          <option value="RUB">RUB</option>
          <option value="TRY">TRY</option>
          <option value="AUD">AUD</option>
          <option value="BRL">BRL</option>
          <option value="CAD">CAD</option>
          <option value="CNY">CNY</option>
          <option value="HKD">HKD</option>
          <option value="IDR">IDR</option>
          <option value="ILS">ILS</option>
          <option value="INR">INR</option>
          <option value="KRW">KRW</option>
          <option value="MXN">MXN</option>
          <option value="MYR">MYR</option>
          <option value="NZD">NZD</option>
          <option value="PHP">PHP</option>
          <option value="SGD">SGD</option>
          <option value="THB">THB</option>
          <option value="ZAR">ZAR</option>
        </select>
      </div>
      <div>
        <label for="targetCurrency">Target Currency:</label>
        <select id="targetCurrency" name="targetCurrency" required>
          <option value="INR">INR</option>
          <option value="EUR">EUR</option>
          <option value="USD">USD</option>
          <option value="JPY">JPY</option>
          <option value="BGN">BGN</option>
          <option value="CZK">CZK</option>
          <option value="DKK">DKK</option>
          <option value="GBP">GBP</option>
          <option value="HUF">HUF</option>
          <option value="PLN">PLN</option>
          <option value="RON">RON</option>
          <option value="SEK">SEK</option>
          <option value="CHF">CHF</option>
          <option value="ISK">ISK</option>
          <option value="NOK">NOK</option>
          <option value="HRK">HRK</option>
          <option value="RUB">RUB</option>
          <option value="TRY">TRY</option>
          <option value="AUD">AUD</option>
          <option value="BRL">BRL</option>
          <option value="CAD">CAD</option>
          <option value="CNY">CNY</option>
          <option value="HKD">HKD</option>
          <option value="IDR">IDR</option>
          <option value="ILS">ILS</option>
          <option value="KRW">KRW</option>
          <option value="MXN">MXN</option>
          <option value="MYR">MYR</option>
          <option value="NZD">NZD</option>
          <option value="PHP">PHP</option>
          <option value="SGD">SGD</option>
          <option value="THB">THB</option>
          <option value="ZAR">ZAR</option>
        </select>
      </div>
      <div>
        <label for="fromDate">From:</label>
        <input type="date" name="fromDate" id="fromDate" required>
      </div>
      <div>
        <label for="toDate">To:</label>
        <input type="date" name="toDate" id="toDate" required>
      </div>
      
      <button type="submit">Convert</button>
    </div>
  </form>

  <div class="result-container">
    <% if(message) { %>
    <h2>Currency Conversion Results:  </h2>
    <% Object.keys(data).forEach(date => { %>
      <p class="conversion-result">
        On <%= date %>, <%= multiplier %> <%= baseCurrency %> is equal to <%= data[date] %> <%= targetCurrency %>
      </p>
    <% }) %>
  </div>
 <% } %>
  <div class="currency-info">
