<script>
  var today=new Date();
  var yesterday =new Date(today);
  yesterday.setDate(today.getDate()-1);

  var formattedYesterday=yesterday.toISOString().split('T')[0];

  document.getElementById('fromDate').max =formattedYesterday;
  document.getElementById('toDate').max =formattedYesterday;
</script>
</html>
